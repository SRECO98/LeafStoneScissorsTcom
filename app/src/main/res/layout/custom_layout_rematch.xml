<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp">

    <TextView
        android:id="@+id/textViewRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:text="Do you want to play rematch ?"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRequest">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRematch"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_dialog_button"
            android:textAllCaps="false"
            android:textColor="#F8F8F8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNewGame"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/no"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/background_dialog_button"
            android:textColor="#F8F8F8" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>