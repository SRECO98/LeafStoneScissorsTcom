<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_logic.tour_score.TourScoreTable">

    <LinearLayout
        android:id="@+id/linearLayoutFirstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/tourScoreTableOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer1"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPlayer2"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer1Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewPlayer2Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tourScoreTableTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tourScoreTableTwo"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer3"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPlayer4"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 4"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer3Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewPlayer4Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tourScoreTableThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            app:layout_constraintEnd_toStartOf="@id/tourScoreTableForth"
            app:layout_constraintStart_toEndOf="@id/tourScoreTableTwo"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer5"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@drawable/border_inside_table"
                    android:text="Player 5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPlayer6"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 6"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer5Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewPlayer6Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tourScoreTableForth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tourScoreTableThree"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer7"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 7"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPlayer8"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 8"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer7Score"
                    android:layout_width="20dp"
                    android:background="@drawable/border_inside_table"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewPlayer8Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout

        android:id="@+id/linearLayoutSecondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFirstRow">

        <LinearLayout
            android:id="@+id/tourScoreTableTwoOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/tourScoreTableTwoTwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer21"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPlayer22"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 2"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer21Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewPlayer22Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@drawable/border_inside_table"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tourScoreTableTwoTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tourScoreTableTwo"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer23"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@drawable/border_inside_table"
                    android:text="Player 3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPlayer24"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="Player 4"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewPlayer23Score"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/border_inside_table"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewPlayer24Score"
                    android:background="@drawable/border_inside_table"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:id="@+id/linearLayoutThirdRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutSecondRow">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPlayer31"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/border_inside_table"
                android:gravity="center"
                android:text="Player 1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewPlayer32"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/border_inside_table"
                android:gravity="center"
                android:text="Player 2"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPlayer31Score"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/border_inside_table"
                android:text="-" />

            <TextView
                android:id="@+id/textViewPlayer32Score"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/border_inside_table"
                android:gravity="center"
                android:text="-" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>